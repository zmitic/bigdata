{% extends 'admin/base.html.twig' %}

{% block content %}
    <table class="table">
        <tr>
            {% for column in columns %}
                <th>{{ column }}</th>
            {% endfor %}
        </tr>

        <tbody>
        {% for entity in pager %}
            <tr>
                {% for column in columns %}
                    <td>
                        {{ attribute(entity, column) }}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>

    </table>

    {{ knp_pagination_render(pager) }}
{% endblock %}